@model RoleManagmentVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage User Role</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Name" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Name" class="ms-2"></label>
                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Age" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Age" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Gander" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Gander" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Phone" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Phone" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Email" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Email" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.SubscriptionPlan" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.SubscriptionPlan" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.SubscriptionStatus" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.SubscriptionStatus" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.SubscriptionDate" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.SubscriptionDate" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.SubscriptionDuration" readonly class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.SubscriptionDuration" class="ms-2"></label>
                </div>
               
                <div class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
                </div>
               
               

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update Role</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a  asp-action="List" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




