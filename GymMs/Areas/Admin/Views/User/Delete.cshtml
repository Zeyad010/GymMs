@model UserM

<div class="col-md-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">User form</h4>
			<p class="card-description">  Delete User </p>
			<form method="post" class="forms-sample">
								<input asp-for="ID" hidden/>
								<div class="form-group">
					<label for="exampleInputUsername1">Name</label>
					<input asp-for="Name" disabled type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Age</label>
					<input asp-for="Age" disabled type="number" class="form-control" id="exampleInputEmail1" placeholder="Age">

				</div>
				<div class="form-group">
					<label for="exampleSelectGender">Gender</label>
					<select disabled asp-for="Gander" class="form-control" id="exampleSelectGender">
						<option>Male</option>
						<option>Female</option>
					</select>

				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Phone</label>
					<input asp-for="Phone" disabled type="number" class="form-control" id="exampleInputConfirmPassword1" placeholder="Phone">

				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Email</label>
					<input asp-for="Email" disabled type="email" class="form-control" id="exampleInputConfirmPassword1" placeholder="Email">

				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Password</label>
					<input asp-for="Password" disabled type="password" class="form-control" id="exampleInputConfirmPassword1" placeholder="Password">

				</div>

				<div class="form-group">
					<label for="exampleSelectGender">Subscription Plan</label>
					<select asp-for="SubscriptionPlan" disabled class="form-control" id="exampleSelectGender">
						<option>Platinum</option>
						<option>Gold</option>
						<option>VIP</option>
					</select>

				</div>


				<div class="form-group">
					<label for="exampleSelectGender">Subscription Status</label>
					<select asp-for="SubscriptionStatus" disabled class="form-control" id="exampleSelectGender">
						<option>Active</option>
						<option>Expired</option>
						<option>Pending</option>
					</select>


				</div>

				<button type="submit" class="btn btn-gradient-danger me-2">Delete</button>
				<button class="btn btn-light" asp-action="Info">Cancel</button>
			</form>
		</div>
	</div>
</div>

   }