@model UserM

<div class="col-md-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">User form</h4>
			<p class="card-description"> Edit user info </p>
			<form method="post" class="forms-sample">
				<input asp-for="ID" hidden/>
 				<div class="form-group">
					<label for="exampleInputUsername1">Name</label>
					<input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="exampleInputEmail1">Age</label>
					<input asp-for="Age" type="number" class="form-control" id="exampleInputEmail1" placeholder="Age">
					<span asp-validation-for="Age" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label for="exampleSelectGender">Gender</label>
					<select asp-for="Gander" class="form-control" id="exampleSelectGender">
						<option>Male</option>
						<option>Female</option>
					</select>
					<span asp-validation-for="Gander" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Phone</label>
					<input asp-for="Phone" type="number" class="form-control" id="exampleInputConfirmPassword1" placeholder="Phone">
					<span asp-validation-for="Phone" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Email</label>
					<input asp-for="Email" type="email" class="form-control" id="exampleInputConfirmPassword1" placeholder="Email">
					<span asp-validation-for="Email" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label for="exampleInputConfirmPassword1">Password</label>
					<input asp-for="Password" type="text" class="form-control" id="exampleInputConfirmPassword1" placeholder="Password">
					<span asp-validation-for="Password" class="text-danger"></span>

				</div>

				<div class="form-group">
					<label for="exampleSelectGender">Subscription Plan</label>
					<select asp-for="SubscriptionPlan" class="form-control" id="exampleSelectGender">
						<option>Platinum</option>
						<option>Gold</option>
						<option>VIP</option>
					</select>
					<span asp-validation-for="SubscriptionPlan" class="text-danger"></span>

				</div>

				<div class="form-group">
					<label for="exampleSelectGender">Subscription Status</label>
					<select asp-for="SubscriptionStatus" class="form-control" id="exampleSelectGender">
						<option>Active</option>
						<option>Expired</option>
						<option>Pending</option>
					</select>
					<span asp-validation-for="SubscriptionStatus" class="text-danger"></span>


				</div>

				<button type="submit" class="btn btn-gradient-primary me-2">Update</button>
				<button class="btn btn-light" asp-action="Info">Cancel</button>
			</form>
		</div>
	</div>
</div>

@section Scripts{

	@{
		// Client side validation
		<partial name="_ValidationScriptsPartial" />

	}
                         }